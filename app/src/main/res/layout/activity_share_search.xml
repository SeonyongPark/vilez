<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="kr.co.vilez.ui.share.search.ShareSearchActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white">

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start"
                    android:background="@drawable/icon_back"
                    android:onClick="@{activity.onBackPressed}"
                    android:scaleType="fitXY" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:hint="검색할 내용을 입력하세요."
                    android:background="@null"
                    android:singleLine="true" />

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물품 공유" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물품 요청" />


            </com.google.android.material.tabs.TabLayout>

            <CheckBox
                android:id="@+id/checkbox_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유가능만 보기"
                android:layout_marginEnd="10dp"/>

            <FrameLayout
                android:id="@+id/frame_layout_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
