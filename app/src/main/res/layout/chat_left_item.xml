<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="data"
            type="kr.co.vilez.data.model.RoomlistData" />

        <variable
            name="imgSrc"
            type="String" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/left_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:imageFromUrl="@{`http://t3.gstatic.com/licensed-image?q=tbn:ANd9GcRsJU78leuImdicf3oG1MppSTOJXGGfIlcPrGQoz4SuhvNZSarcxX620o72s_tgkHrg`}"/>

                <TextView
                    android:id="@+id/textv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="150"
                    android:maxLines="15"
                    android:padding="10dp"
                    android:text="@{data.content}"
                    android:textColor="#000000"
                    android:background="@drawable/ic_msg_test"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
