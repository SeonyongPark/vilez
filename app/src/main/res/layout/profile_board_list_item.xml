<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="shareData"
            type="kr.co.vilez.ui.share.ShareData" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >
            <!--        app:cardCornerRadius="20dp"-->
            <!--        app:strokeColor="#e6e6e6">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="board image"
                    app:imageFromUrl="@{shareData.iv_profile}" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{shareData.tv_name}" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/icon_vertical_menu"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/icon_location"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{shareData.tv_local}"
                            android:textColor="@color/text_sub_1"/>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Â· "
                            android:textColor="@color/text_sub_1"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{shareData.tv_date}"
                            android:textColor="@color/text_sub_1"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="24dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/icon_calendar"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{shareData.tv_period}"
                            android:textColor="@color/text_sub_1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="15dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/icon_empty_heart"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{shareData.tv_bookmark}"
                            android:textColor="@color/text_sub_1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end">

                        <ImageButton
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/icon_msg"
                            android:layout_marginEnd="4dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="5"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>







        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</layout>
